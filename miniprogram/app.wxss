/**app.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  box-sizing: border-box;
  background: #fff;
}

.content-wrapper {
  width: 100%;
  margin-bottom: 60rpx;
  padding: 40rpx;
  background: #fff;
  border-radius: 8rpx;
}

.content {
  font-size: 34rpx;
  line-height: 1.6;
  color: #333;
  text-align: center;
}

.button-wrapper {
  width: 100%;
  display: flex;
  justify-content: center;
}

.refresh-button {
  width: 240rpx !important;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  color: #fff;
  background: #07c160;
  border-radius: 40rpx;
} 