.container {
  padding: 20rpx;
  background-color: #F8F9FA;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #9747FF;
  display: block;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
  margin-top: 10rpx;
  display: block;
}

.form-container {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.input-group {
  margin-bottom: 30rpx;
}

.label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  display: block;
}

.input-area {
  width: 100%;
  height: 200rpx;
  border: 2rpx solid #E5E5E5;
  border-radius: 10rpx;
  padding: 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.picker {
  background: #F8F9FA;
  padding: 20rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  color: #333;
}

.generate-btn {
  background: #9747FF;
  color: #FFFFFF;
  border-radius: 10rpx;
  width: 100%;
  margin-top: 40rpx;
  font-size: 32rpx;
}

.generate-btn::after {
  border: none;
}

.result-container {
  margin-top: 40rpx;
  padding: 30rpx;
  background: #F8F9FA;
  border-radius: 10rpx;
}

.result-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.result-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  display: block;
  margin-bottom: 20rpx;
}

.copy-btn {
  background: #FFFFFF;
  color: #9747FF;
  border: 2rpx solid #9747FF;
  border-radius: 10rpx;
  font-size: 28rpx;
  margin-top: 20rpx;
}

.copy-btn::after {
  border: none;
} 