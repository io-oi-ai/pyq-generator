.container {
  padding: 20rpx;
}

.section {
  margin-bottom: 30rpx;
}

.btn {
  background-color: #1890ff;
  color: #fff;
  border-radius: 8rpx;
  margin: 20rpx 0;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.image-item {
  position: relative;
  width: 220rpx;
  height: 220rpx;
}

.image-item image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.delete-btn {
  position: absolute;
  right: 10rpx;
  top: 10rpx;
  background-color: rgba(0, 0, 0, 0.5);
  color: #fff;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
  font-size: 24rpx;
}

.status {
  font-size: 28rpx;
  color: #666;
  text-align: center;
  margin-top: 20rpx;
} 